{
  "settings": {
    "react": {
      "version": "detect",
      "es2021": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "*.config.js",
    "build/*"
  ],
  "rules": {
    "no-unused-vars": ["warn"],
    "react/prop-types": "off"
  }
}

